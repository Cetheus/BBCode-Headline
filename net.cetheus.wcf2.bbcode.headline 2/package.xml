<?xml version="1.0" encoding="UTF-8"?>
<package name="net.cetheus.wcf2.bbcode.headline" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/maelstrom/package.xsd">
	<packageinformation>
		<packagename>BBCode Headline</packagename>
		<packagename language="de">BBCode Headline</packagename>
		<packagedescription>This plugin adds a BB-Code for Headlines</packagedescription>
		<packagedescription language="de">Dieses Plugin fügt einen BB-Code für Überschriften (Headlines) hinzu.</packagedescription>
		<version>1.0.1</version>
		<date>2014-03-01</date>
	</packageinformation>

	<authorinformation>
		<author>Cetheus</author>
		<authorurl>http://www.cetheus.net/</authorurl>
	</authorinformation>

	<requiredpackages>
		<requiredpackage minversion="2.0.0 Beta 1">com.woltlab.wcf</requiredpackage>
	</requiredpackages>
	
	<instructions type="install">
		<instruction type="file">files.tar</instruction>
		<instruction type="bbcode">bbcode.xml</instruction>
		<instruction type="language">languages/*.xml</instruction>
	</instructions>
	
	<instructions type="update" fromversion="1.0.0">
		<instruction type="file">files.tar</instruction>
		<instruction type="bbcode">bbcode.xml</instruction>
		<instruction type="language">languages/*.xml</instruction>
	</instructions>
</package>